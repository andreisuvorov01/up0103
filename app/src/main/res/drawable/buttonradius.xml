<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="25dp" android:color="#2F70AF" />
            <gradient android:angle="-90" android:startColor="#00457E" android:endColor="#2F70AF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="25dp" android:color="#00457E" />
            <solid android:color="#2F70AF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="25dp" android:color="#00457E" />
            <gradient android:angle="-90" android:startColor="#2F70AF" android:endColor="#00457E" />
        </shape>
    </item>
</selector>